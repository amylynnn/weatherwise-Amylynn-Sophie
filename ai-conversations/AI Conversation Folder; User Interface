import pyinputplus as pyip

def print_banner():
    print("\n" + "="*40)
    print("â˜ï¸  Welcome to the Weather Assistant!  â˜ï¸")
    print("="*40)

def main_menu():
    print("\n=== ğŸŒ¦ï¸ Weather Assistant Menu ===")
    return pyip.inputMenu(
        ["ğŸŒ¤ï¸  Ask Weather Question", "ğŸ“Š  Visualize Weather Data", "ğŸšª  Exit"],
        lettered=True,
        numbered=False,
        prompt="\nğŸŒˆ What would you like to do?\n",
        blank=False,
        limit=3,
        retries=2,
        default="ğŸšª  Exit"
    )

def visualization_menu():
    return pyip.inputMenu(
        ["ğŸ“ˆ  Temperature", "ğŸŒ§ï¸  Precipitation", "ğŸ”™  Back to Main Menu"],
        lettered=True,
        numbered=False,
        prompt="\nğŸ“Š Choose a visualization type:\n",
        blank=False,
        limit=3,
        retries=2,
        default="ğŸ”™  Back to Main Menu"
    )

def run_interface():
    print_banner()
    while True:
        choice = main_menu()

        if "Ask Weather" in choice:
            print("ğŸ—£ï¸  You chose to ask a weather question.")
        
        elif "Visualize" in choice:
            while True:
                sub_choice = visualization_menu()
                if "Temperature" in sub_choice:
                    print("ğŸ“ˆ Showing temperature chart...")
                elif "Precipitation" in sub_choice:
                    print("ğŸŒ§ï¸ Showing precipitation chart...")
                elif "Back" in sub_choice:
                    break

        elif "Exit" in choice:
            print("ğŸ‘‹ Exiting Weather Assistant. Stay safe!")
            break
```

